<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/studentDetailsParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/horizontal_line"
    android:orientation="vertical"
    android:padding="@dimen/margin_padding_normal">


    <TextView
        android:id="@+id/studentObjectName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_xnormal"
        android:layout_marginLeft="@dimen/margin_padding_xnormal"
        android:textSize="@dimen/text_size_large"
        tools:text="Name"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/studentObjectClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="Class"/>

        <TextView
            android:id="@+id/studentObjectRollNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="Roll No"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding_normal"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/student_item_iv_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@android:drawable/ic_delete"/>

        <ImageView
            android:id="@+id/student_item_iv_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@android:drawable/ic_menu_edit"/>
    </LinearLayout>

</LinearLayout>



